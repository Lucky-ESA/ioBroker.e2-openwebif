{
    "name": "iobroker.e2-openwebif",
    "version": "0.0.1",
    "description": "Remote control OpenWebIf",
    "author": {
        "name": "Lucky-ESA",
        "email": "github@luckyskills.de"
    },
    "homepage": "https://github.com/Lucky-ESA/ioBroker.e2-openwebif",
    "license": "MIT",
    "keywords": [
        "e2",
        "openwebif",
        "webif",
        "enigma2",
        "remote",
        "control",
        "vupuls",
        "gigablue",
        "dreambox"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:Lucky-ESA/ioBroker.e2-openwebif.git"
    },
    "engines": {
        "node": ">= 20"
    },
    "dependencies": {
        "@iobroker/adapter-core": "^3.3.2",
        "json-bigint": "^1.0.0",
        "ssh2-promise": "^1.0.3",
        "wol": "^1.0.7"
    },
    "devDependencies": {
        "@alcalzone/release-script": "^3.8.0",
        "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
        "@alcalzone/release-script-plugin-license": "^3.7.0",
        "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
        "@iobroker/adapter-dev": "^1.5.0",
        "@iobroker/eslint-config": "^2.2.0",
        "@iobroker/testing": "^5.1.1",
        "@tsconfig/node18": "^18.2.4",
        "@types/node": "^24.9.2",
        "typescript": "~5.9.3"
    },
    "main": "main.js",
    "files": [
        "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
        "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
        "lib/",
        "www/",
        "io-package.json",
        "LICENSE",
        "main.js"
    ],
    "scripts": {
        "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
        "test:package": "mocha test/package --exit",
        "test:integration": "mocha test/integration --exit",
        "test": "npm run test:js && npm run test:package",
        "check": "tsc --noEmit -p tsconfig.check.json",
        "lint": "eslint -c eslint.config.mjs .",
        "translate": "translate-adapter",
        "release": "release-script patch --yes",
        "release-minor": "release-script minor --yes",
        "release-major": "release-script major --yes"
    },
    "bugs": {
        "url": "https://github.com/Lucky-ESA/ioBroker.e2-openwebif/issues"
    },
    "readmeFilename": "README.md"
}
